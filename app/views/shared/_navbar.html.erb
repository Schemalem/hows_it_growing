    <%= image_tag "hig-logo-normal.png", class: "nav-logo" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item-bold">
          <%= link_to "get matched", questions_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "browse plants", plants_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://cdn0.iconfinder.com/data/icons/occupation-002-1/64/gardener-farming-occupation-avatar-512.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
