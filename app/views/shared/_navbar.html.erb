        </li>
      <% else %>
        <div class="justify-content-end align-self-stretch d-flex flex-equal">
          <%= link_to "get matched", questions_path, class: "nav-link nav-item-bold" %>
          <%= link_to "browse plants", plants_path, class: "nav-link" %>
          <%= link_to "login", new_user_session_path, class: "btn btn-light mr-2" %>
          <%= link_to 'sign up', new_user_registration_path, class: "btn btn-main" %>
